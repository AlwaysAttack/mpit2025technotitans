{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["*"],
      "react-native-maps/lib/*": ["./node_modules/react-native-maps/lib/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts", "declarations.d.ts", "src/**/*", "src/types/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
